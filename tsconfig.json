{
  "compilerOptions": {
    "module": "ES2020",
    "target": "ES2020",
    "useDefineForClassFields": true,
    "sourceMap": true,
    "lib": [
      "ES2018",
      "ES2018.Promise"
    ],
    "skipLibCheck": true,
    "allowJs": true,
    /* Bundler mode */
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": false,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "rootDirs": [
      "src/",
    ],
    "outDir": "dist",
    "declarationDir": "dist/@types",
    "declaration": true,
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
    "transpileOnly": true,
    "files": true,
    "compilerOptions": {
      "module": "ES2020"
    }
  },
  "include": [
    "./src/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts"
  ],
}
